<table class="table table-dark table-striped table-hover text-center table-bordered">
	<thead>
		<tr>
			<th scope="col">
				{% trans %}builds.name{% endtrans %}
			</th>
			{% if global %}
				<th scope="col">
					{% trans %}builds.author{% endtrans %}
				</th>
			{% endif %}
			<th scope="col">
				{% trans %}builds.weapon{% endtrans %}
			</th>
			<th scope="col">
				{% trans %}builds.type{% endtrans %}
			</th>
			<th scope="col">
				Like
			</th>
			<th scope="col">
				{% trans %}builds.view{% endtrans %}
			</th>
			<th scope="col">
				{% trans %}builds.update{% endtrans %}
			</th>
			{% if not global %}
				<th scope="col">
					{% trans %}build.actions.label{% endtrans %}
				</th>
			{% endif %}
		</tr>
	</thead>
	<tbody>
		{% for build in builds %}
			<tr>
				<td>
					<a href="{{path('app_builds_show',{id: build.id})}}">{{ build.name|slice(0, 30) }}
						{% if build.name|length > 30 %}...
						{% endif %}
					</a>
				</td>
				{% if global %}
					<td>
						{% if build.author %}
							<a href="{{path('app_profile_show',{id: build.author.id})}}">{{ build.author.pseudo }}</a>
						{% else %}
							{% trans %}build.anonymous{% endtrans %}
						{% endif %}
					</td>
				{% endif %}
				<td>
					{{ build.weapons|join(' / ') }}
				</td>
				<td>
					{% if build.type == 1 %}
						{% trans %}create.type.general{% endtrans %}
						{% elseif build.type == 2 %}PVP
						{% elseif build.type == 3 %}PVE
						{% elseif build.type == 4 %}PVX
					{% elseif build.type == 5 %}
						{% trans %}create.type.war{% endtrans %}
					{% endif %}
				</td>
				<td>
					{{ build.liked|length }}
				</td>
				<td>
					{{ build.views }}
				</td>
				<td>
					{% set distance = date('now').diff(date(build.UpdatedAt)).days %}
					{{ distance }}
					{% trans %}builds.day{% endtrans %}
				</td>
				{% if not global %}
					<td scope="col">
						<a href="{{path('app_builds_edit', {id: build.id})}}" class="btn btn-sm btn-primary">{% trans %}build.actions.edit{% endtrans %}</a>
						<a href="{{path('app_builds_delete', {id: build.id})}}" class="btn btn-sm btn-danger">{% trans %}build.actions.delete{% endtrans %}</a>
					</td>
				{% endif %}
			</tr>
		{% endfor %}
	</tbody>
</table>
