{% set locales = ["de", "en", "es", "fr", "it", "pl", "pt"] %}

<div class="ms-2 dropdown">
	<a class="nav-link dropdown-toggle link-secondary" id="localeDrowpdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
		<img src="{{ asset("/img/flag/#{locale}.svg") }}" class="flag">
	</a>
	<ul class="dropdown-menu px-2 py-2" aria-labelledby="localeDrowpdown">
		{% for l in locales %}
			<a class="p-0 dropdown-item p-1 d-flex" href="{{ path(route, params|merge({ _locale: l })) }}">
				<span class="flex-fill">{{ "locales.#{l}"|trans([], 'messages', 'global') }}</span>
				<img src="{{ asset("/img/flag/#{l}.svg") }}" class="flag">
			</a>
		{% endfor %}
	</ul>
</div>
