{% extends "base.html.twig" %}

{% block title "Create a Build" %}

{% block stylesheets %} <link href="css/createBuild.css" rel="stylesheet"> {% endblock %}

{% block javascripts %} <script type="text/javascript" src="js/scriptCreateBuild.js"></script> {% endblock %}

{% block body %}



<div class="mb-3 row">
    <label class="col-sm-3 col-form-label col-form-label-lg" id="BuildName">{% trans into lang %}BuildName{% endtrans %} :</label>
    <div class="col">
        <input class="form-control" name="buildname" id="BuildNameInput" placeholder="{% trans into lang %}BuildName{% endtrans %}"/>
    </div>
    <div class="col-2">
        <select class="form-select" id="selectType" name="modetype" id="modetypeInput" >
            <option hidden disabled selected>{% trans into lang %}TypeName{% endtrans %}</option>
            <option name="modetype1" id="modetype1" value="1">PVP</option>
            <option name="modetype2" id="modetype2" value="2">PVE</option>
            <option name="modetype3" id="modetype3" value="3">PVPVE</option>
            <option name="modetype4" id="modetype4" value="4">{% trans into lang %}Siege{% endtrans %}</option>
        </select>   
    </div>
</div>
<div class="mb-3 row">
    <label class="col-sm-3 col-form-label col-form-label-lg" id="BuildName">{% trans into lang %}PlayerName{% endtrans %} :</label>
    <div class="col">
        <input class="form-control" name="playername" id="playernameInput" placeholder="{% trans into lang %}PlayerName{% endtrans %}"/>
    </div>
</div>
<div class="mb-4 row">
    <label class="col-sm-3 col-form-label col-form-label-lg" id="description">{% trans into lang %}BuildDesc{% endtrans %} :</label>
    <div class="col">
        <textarea class="form-control" id="description" name="description" placeholder="{% trans into lang %}BuildDesc{% endtrans %}"></textarea>
    </div>
</div>


<div class="mb-3 row">
<label class="col-sm-3 col-form-label col-form-label-lg" id="weapon">{% trans into lang %}Weapons{% endtrans %}</label>

