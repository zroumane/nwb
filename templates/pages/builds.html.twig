{% extends "base.html.twig" %}

{% block stylesheets %}{% endblock %}

{% block javascripts %}{% endblock %}

{% block body %}


<table class="table table-dark table-striped table-hover text-center table-bordered">
   <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Author</th>
      <th scope="col">Weapon</th>
      <th scope="col">Type</th>
      <th scope="col">View</th>
      <th scope="col">Update</th>
    </tr>
  <tbody>
  {% for build in builds %}

    <tr>
      <td><a href="{{ path('app_builds_view', {'id': build.id}) }}">{{build.name}}</a></td>
      <td>{{build.author.pseudo}}</td>
      <td>{{build.weapon|join(' / ')}}</td>
      <td> 
        {% if build.type == 0 %}//{% endif %}
        {% if build.type == 1 %}PVP{% endif %}
        {% if build.type == 2 %}PVE{% endif %}
        {% if build.type == 3 %}PVPVE{% endif %}
        {% if build.type == 4 %}Si√®ge{% endif %}
        </td>
      <td>{{build.views}}</td>
      <td>
        {% set distance = date("now").diff(date(build.UpdatedAt)).days %} 
        il y a {% if distance <= 1 %} 1 jour {% else %} {{ distance }} jours {% endif %}
      </td>
    </tr>

  {% endfor %}
  </tbody>
</table>

{% endblock %}